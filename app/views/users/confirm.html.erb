<h2>Sign Up Confirmation</h2>

<h4>Are you sure these values are correct?</h4>

<div class="row">
  <ul>
    <li>Email:<%= @user.email %></li>
    <li>Name:<%= @user.name %></li>
  </ul>
</div>
<div class="form-group">
  <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
</div>
<div class="form-group">
  <%= button_to "No", link_to "Sign Up", new_user_path, class: 'btn btn-primary' %>
</div>
